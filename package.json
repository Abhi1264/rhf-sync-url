{
  "name": "rhf-sync-url",
  "version": "1.0.3",
  "description": "Sync React Hook Form state with URL Query Params automatically.",
  "repository": {
    "type": "git",
    "url": "https://github.com/Abhi1264/rhf-sync-url.git"
  },
  "homepage": "https://github.com/Abhi1264/rhf-sync-url#readme",
  "bugs": {
    "url": "https://github.com/Abhi1264/rhf-sync-url/issues"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean --minify --no-sourcemap",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "react",
    "hook",
    "form",
    "url",
    "query",
    "sync",
    "persistence"
  ],
  "author": {
    "name": "Abhi1264",
    "url": "https://github.com/Abhi1264"
  },
  "license": "ISC",
  "files": [
    "dist",
    "README.md",
    "logo.svg"
  ],
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^4.0.12",
    "@vitest/ui": "^4.0.12",
    "jsdom": "^23.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.49.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.12"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-hook-form": ">=7.0.0"
  }
}
